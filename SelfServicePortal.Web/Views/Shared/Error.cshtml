@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container mt-5">
    <div class="card shadow-lg border-danger">
        <div class="card-body text-center p-5">
            <i class="bi bi-exclamation-triangle text-danger" style="font-size: 4rem;"></i>
            <h1 class="text-danger mt-4">Oops!</h1>
            <h2 class="text-muted mb-4">Something went wrong</h2>

            @if (Model.ShowRequestId)
            {
                <p class="text-muted">
                    <small>Request ID: <code>@Model.RequestId</code></small>
                </p>
            }

            @if (Environment.GetEnvironmentVariable("ASPNETCORE_ENVIRONMENT") == "Development")
            {
                <div class="alert alert-info mt-4">
                    <h4 class="alert-heading">Development Mode</h4>
                    <p>@Model.ErrorMessage</p>
                    @if (Model.StackTrace != null)
                    {
                        <pre class="mt-3 text-start"><code>@Model.StackTrace</code></pre>
                    }
                </div>
            }

            <a href="/" class="btn btn-primary mt-4">
                <i class="bi bi-house"></i> Back to Home
            </a>
        </div>
    </div>
</div>
